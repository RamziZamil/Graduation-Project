@{
    ViewData["Title"] = "AqabaPage";
}
@inject IHttpContextAccessor Accessor

<!doctype html>
<html lang="en">

<body>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        
        .pac1 {
            text-align: center;
        }

        .column {
            float: left;
            width: 33.33%;
            background-color: #f2f2f2;
            border-radius: 8px;
            padding: 20px;
            max-width: 100%;
            height: auto;
        }

        .sectext {
            font-family: URW Chancery L, cursive;
            text-align: center;
        }

        .imgg {
            width: 300px;
            height: 600px;
            border-radius: 8px;
        }


        .scuba-diving-course {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            margin: 50px 0;
        }

        .scuba-diving-experience {
            width: 20%;
            margin: 10px;
            text-align: left;
            background-color: whitesmoke;
            border-radius: 10px;
            padding: 20px;
        }

            .scuba-diving-experience img {
                max-width: 100%;
                height: auto;
            }

            .scuba-diving-experience h2 {
                font-size: 24px;
                margin-top: 10px;
            }

            .scuba-diving-experience p {
                margin-top: 10px;
                margin-bottom: 20px;
            }



        .special-word {
            color: grey;
            font-family: Gill Sans, sans-serif;
        }

        html, body {
            height: 100%;
        }

        .wrap {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button {
            width: 140px;
            height: 45px;
            font-family: 'Roboto', sans-serif;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            color: #000;
            background-color: #fff;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
        }

            .button:hover {
                background-color: #2EE59D;
                box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
                color: #fff;
                transform: translateY(-7px);
            }

        
    </style>
    <main>
        <header>
            @Html.Partial("_Header")
        </header>

        <div class="sectext">
            <h2>Aqaba, Jordan (Trips)</h2>
        </div>

        <img class="imgg" src="/img/aqabawall2.jpg" alt="Aqaba" style="width:100%">

        <br />
        <br />
        <br />
        <br />

        <h2>Choose Your Trip in Aqaba !</h2>
        <hr />
        <br />
        <br />

        <h4 class="pac1">Packages</h4>

        <section class="scuba-diving-course">
            <div class="scuba-diving-experience">
                <img class="imgg" src="~/img/hyatt2.jpg" alt="Aqaba">
                <br />
                <br />
                <h6><span class='special-word'>Organization: </span> Jordan Tours</h6>

                <hr />
                <p>4 Days 3 Nights</p>

                <h6><span class='special-word'>Transportation: </span> JETT bus (Amman-Aqaba)</h6>
                <h6><span class='special-word'>Hotel: </span> Hyatt Regency Aqaba (Ayla)</h6>
                <p>210 JD</p>
                <div class="wrap">
                    <!-- Use a form with the action attribute set to the destination page URL -->
                    @if (Accessor.HttpContext.Session.Keys.Any()){
                    <form asp-controller="Home" asp-action="Booking">
                        <button type="submit" class="button">Book Now</button>
                        </form>
                    }
                    else
                    {
                        <div class="wrap">
                            <button class="button">Book Now</button>
                        </div>
                    }

                </div>
            </div>





            <div class="scuba-diving-experience">
                <img class="imgg" src="~/img/mov.jpg" alt="Aqaba">
                <br />
                <br />
                <h6><span class='special-word'>Organization: </span> Adviser Travel and Tourism</h6>

                <hr />
                <p>3 Days 2 Nights</p>

                <h6><span class='special-word'>Transportation: </span> JETT bus (Amman-Aqaba)</h6>
                <h6><span class='special-word'>Hotel: </span> Mövenpick Aqaba</h6>
                <p>145 JD</p>
                <div class="wrap">
                    <button class="button">Book Now</button>
                </div>
            </div>




            <div class="scuba-diving-experience">
                <img class="imgg" src="~/img/cloud7.jpg" alt="Aqaba">
                <br />
                <br />
                <h6><span class='special-word'>Organization: </span> Ajam Travel and Tourism	</h6>

                <hr />
                <p>3 Days 2 Nights</p>

                <h6><span class='special-word'>Transportation: </span> JETT bus (Amman-Aqaba)</h6>
                <h6><span class='special-word'>Hotel: </span> Hyatt Regency Aqaba (Ayla)</h6>
                <p>249 JD</p>
                <div class="wrap">
                    <button class="button">Book Now</button>
                </div>
            </div>




            <div class="scuba-diving-experience">
